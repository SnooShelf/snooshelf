{
  "manifest_version": 3,
  "name": "SnooShelf",
  "version": "0.1.0",
  "description": "Unlimited local storage for your Reddit saves. Never lose a saved post again.",
  
  "permissions": [
    "storage",
    "tabs",
    "identity"
  ],
  
  "oauth2": {
    "client_id": "SbSYZ7XzMXBQkEqgVHm01w",
    "scopes": ["identity", "history", "read", "save"]
  },
  
  "host_permissions": [
    "https://www.reddit.com/*",
    "https://oauth.reddit.com/*"
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon-16.png",
      "48": "assets/icon-48.png",
      "128": "assets/icon-128.png"
    },
    "default_title": "SnooShelf"
  },
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["*://*.reddit.com/*"],
      "js": ["content.js"]
    }
  ],
  
  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  
      "web_accessible_resources": [
        {
          "resources": ["assets/*"],
          "matches": ["*://*.reddit.com/*"]
        },
        {
          "resources": ["config.js", "reddit-api.js", "storage.js", "export.js", "cache.js", "settings.html", "settings.js"],
          "matches": ["<all_urls>"]
        }
      ],
      
      "options_page": "settings.html",
      
      "commands": {
        "open-settings": {
          "suggested_key": {
            "default": "Ctrl+Shift+S",
            "mac": "Command+Shift+S"
          },
          "description": "Open SnooShelf Settings"
        }
      }
}
